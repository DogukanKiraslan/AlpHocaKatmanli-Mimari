@model ecommaranceWithLayeredArchDomain.Entities.Product
@using ecommaranceWithLayeredArchDomain.Entities
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Layouts/Layout1.cshtml";
}
<br />
<div class="card">

    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="accordion-body">
        <table class="table table-striped table-responsive-sm">
            <tr>
                <th>ID</th>
                <th>İsim</th>
                <th>Detay</th>
            </tr>
            
            @foreach (SKU item in Model.SKUs)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>
                        <div class="btn-group btn-group-sm"><a href="@Url.Action("PairVariantSKU","Product", new {id = item.ID})" class="btn btn-outline-secondary"><i class="fa fa-archive"></i></a></div>
                    </td>
                </tr>
            }
        </table>

        <table class="table table-striped table-responsive-sm ">
            <tr>
                <th>ID</th>
                <th>İsim</th>
            </tr>
            @foreach (Variant item in Model.Variants)
            {
                 <tr>
                    <td>@item.ID</td>
                    <td>@item.value</td>
                </tr>
            }
        </table>
    </div>
    <div class="card-footer">
        <div class="btn-group">
            <a href="@Url.Action("CreateSKU","Product", new {id = Model.ID})" class="btn btn-outline-primary">SKU ekle</a>
            <a href="@Url.Action("CreateVariant","Product", new {id = Model.ID})" class="btn btn-outline-primary">Özellik ekle</a>
        </div>
    </div>
</div>
